{% extends 'base.html.twig' %}

{% block body %}

    <h2>{{ title }}</h2>

    {% if error  %}
        <div class="alert alert-danger"> {{ error.message | trans }} </div>
    {% endif %}

    <form action="{{ action }}" method="post">

        <div class="form-group">
            <label for="userName">Login</label>
            <input type="text" name="_username" class="form-control" id="userName"  required value="{{ userName }} ">
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" class="form-control" id="password" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Connexion</button>
        </div>

    </form>

{% endblock %}

{% block aside %}

{% endblock %}

